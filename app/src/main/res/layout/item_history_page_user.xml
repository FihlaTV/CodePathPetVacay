<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation #"
        android:id="@+id/tvBookingId"
        android:textColor="@color/light_gray"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="132dp"
        android:id="@+id/ivListingImage"
        android:background="@color/red"
        android:layout_below="@+id/tvBookingId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivBHProfilePicture"
        android:layout_alignBottom="@+id/ivListingImage"
        android:layout_alignParentRight="true"
        android:background="@color/green"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location."
        android:id="@+id/tvLocation"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/ivBHProfilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvFromDate"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/ivListingImage"
        android:layout_toRightOf="@+id/tvBookingId"
        android:layout_toEndOf="@+id/tvBookingId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvToDate"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/ivListingImage"
        android:layout_toRightOf="@+id/tvFromDate"
        android:layout_toEndOf="@+id/tvFromDate" />

</RelativeLayout>