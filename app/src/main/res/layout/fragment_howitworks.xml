<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffffff">


        <ImageView
        android:id="@+id/ivHSWImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHSWTitle"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:capitalize="sentences" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHSWText"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvHSWTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:id="@+id/linearLayout"
        android:dividerPadding="32dp"
        android:showDividers="middle">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHSWLogIn"
            android:layout_weight="1"
            android:text="Log In"
            android:background="@color/petvacayteal"
            android:textColor="@color/white"
            android:capitalize="none" />
        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHSWSignUp"
            android:text="Sign Up"
            android:background="@color/petvacayteal"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:capitalize="none" />

        </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/white"
        android:id="@+id/btnHSWSkip"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:shadowColor="#ffffffff"
        android:capitalize="none" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:id="@+id/btnHSWBack"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_back"
        android:shadowColor="#ffffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>