<?xml version="1.0" encoding="utf-8"?>
<!-- This is the fragment  to be displayed for a section associated with a tab -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/ivBHCoverPicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivBHProfilePicture"
        android:layout_alignBottom="@+id/ivBHCoverPicture"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBHTitle"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/light_gray"
        android:layout_below="@+id/ivBHCoverPicture"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBHLocation"
        android:textStyle="italic"
        android:layout_below="@+id/tvBHTitle"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/petvacayteal"
        android:id="@+id/tvBHStartDate"
        android:paddingLeft="25dp"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/tvBHLocation"
        android:layout_toRightOf="@+id/tvBHLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBHEndDate"
        android:textColor="@color/petvacayteal"
        android:paddingLeft="8dp"
        android:textSize="12sp"
        android:layout_below="@+id/tvBHTitle"
        android:layout_alignBottom="@+id/tvBHStartDate"
        android:paddingRight="3dp"
        android:layout_toRightOf="@+id/tvBHStartDate" />

</RelativeLayout>