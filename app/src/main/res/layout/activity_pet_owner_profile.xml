<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.petbnbcodepath.activities.PetOwnerProfileActivity">

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/ivProfilePic"
        android:layout_marginLeft="@dimen/pet_owner_profile_name_margin_left"
        android:layout_marginStart="@dimen/pet_owner_profile_name_margin_left"
        android:layout_marginRight="@dimen/pet_owner_profile_name_margin_right"
        android:layout_marginEnd="@dimen/pet_owner_profile_name_margin_right"
        android:layout_marginTop="@dimen/pet_owner_profile_name_margin_top"
        android:textColor="@color/dark_gray"/>
    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/ivProfilePic"
        android:layout_toRightOf="@+id/tvFirstName"
        android:layout_toEndOf="@+id/tvFirstName"
        android:layout_marginTop="@dimen/pet_owner_profile_name_margin_top"
        android:textColor="@color/dark_gray"/>
    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFirstName"
        android:layout_marginLeft="@dimen/pet_owner_profile_name_margin_left"
        android:layout_marginStart="@dimen/pet_owner_profile_name_margin_left"
        android:layout_marginRight="@dimen/pet_owner_profile_name_margin_right"
        android:layout_marginEnd="@dimen/pet_owner_profile_name_margin_right"
        android:layout_marginTop="@dimen/pet_owner_profile_name_margin_top"
        android:text="ACCEPT"/>

</RelativeLayout>
