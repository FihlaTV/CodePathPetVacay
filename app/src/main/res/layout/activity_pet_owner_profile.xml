<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgWhite"
    android:orientation="vertical"
    tools:context="com.codepath.petbnbcodepath.activities.PetOwnerProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pet_owner_profile_image"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivProfilePic"
                    android:layout_marginEnd="@dimen/pet_owner_profile_name_margin_right"
                    android:layout_marginLeft="@dimen/pet_owner_profile_name_margin_left"
                    android:layout_marginRight="@dimen/pet_owner_profile_name_margin_right"
                    android:layout_marginStart="@dimen/pet_owner_profile_name_margin_left"
                    android:layout_marginTop="@dimen/pet_owner_profile_name_margin_top"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivProfilePic"
                    android:layout_marginBottom="@dimen/pet_owner_profile_name_margin_bottom"
                    android:layout_marginTop="@dimen/pet_owner_profile_name_margin_top"
                    android:layout_toEndOf="@+id/tvFirstName"
                    android:layout_toRightOf="@+id/tvFirstName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_gray" />

            </RelativeLayout>
            <View
                android:id="@+id/divBelowPetOwner"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvFirstName"
                android:background="@color/light_gray" />
            <TextView
                android:id="@+id/tvDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/dark_gray"
                android:text="@string/dates"
                android:layout_marginTop="@dimen/book_det_dates_margin_top"
                android:layout_marginBottom="@dimen/book_det_dates_margin_bottom"/>
            <LinearLayout
                android:id="@+id/dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sel_dates_margin"
                android:layout_marginRight="@dimen/sel_dates_margin"
                android:layout_marginStart="@dimen/sel_dates_margin"
                android:layout_marginEnd="@dimen/sel_dates_margin"
                android:showDividers="middle"
                android:dividerPadding="2dp"
                >
                <TextView
                    android:id="@+id/tvDropDates"
                    android:layout_width="@dimen/zero_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/vl_white"
                    android:textAllCaps="false"
                    android:paddingRight="@dimen/sel_dates_button_padding"
                    android:paddingLeft="@dimen/sel_dates_button_padding"
                    android:paddingTop="@dimen/sel_dates_button_padding"
                    android:paddingBottom="@dimen/sel_dates_button_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvPickDates"
                    android:layout_width="@dimen/zero_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/vl_white"
                    android:textAllCaps="false"
                    android:paddingTop="@dimen/sel_dates_button_padding"
                    android:paddingBottom="@dimen/sel_dates_button_padding"
                    android:paddingRight="@dimen/sel_dates_button_padding"
                    android:paddingEnd="@dimen/sel_dates_button_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/price"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="@dimen/book_det_dates_margin_top"
                android:layout_marginBottom="@dimen/book_det_dates_margin_bottom"/>
            <ExpandableListView
                android:id="@+id/lvPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/expandable_lv_height"
                android:isScrollContainer="false"
                android:layout_marginLeft="@dimen/login_button_padding"
                android:layout_marginRight="@dimen/login_button_padding"
                android:layout_marginStart="@dimen/login_button_padding"
                android:layout_marginEnd="@dimen/login_button_padding"
                android:layout_marginBottom="@dimen/book_det_dates_margin_bottom"
                />
            <ImageView
                android:id="@+id/ivMsgOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/book_det_dates_margin_bottom"
                android:src="@mipmap/ic_message"/>
            <TextView
                android:id="@+id/tvMsgFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/light_gray"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/book_det_dates_margin_bottom"/>
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_gray"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/only_charge"
                android:layout_marginLeft="@dimen/only_charge_margin"
                android:layout_marginStart="@dimen/only_charge_margin"
                android:layout_marginRight="@dimen/only_charge_margin"
                android:layout_marginEnd="@dimen/only_charge_margin"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/book_det_dates_margin_bottom"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llBtnAcceptDecline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/accept_decline_button_margin_top"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/book_det_dates_margin_bottom">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="@dimen/zero_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/accept_decline_button_margin_right"
            android:layout_marginLeft="@dimen/accept_decline_button_margin_left"
            android:layout_marginRight="@dimen/accept_decline_button_margin_right"
            android:layout_marginStart="@dimen/accept_decline_button_margin_left"
            android:layout_weight="1"

            android:background="@drawable/btnacceptdecline"
            android:text="@string/accept"
            android:textAllCaps="false"
            android:textColor="@color/vl_white" />

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="@dimen/zero_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/accept_decline_button_margin_right"
            android:layout_marginLeft="@dimen/accept_decline_button_margin_left"
            android:layout_marginRight="@dimen/accept_decline_button_margin_right"
            android:layout_marginStart="@dimen/accept_decline_button_margin_left"
            android:layout_weight="1"
            android:background="@drawable/btnacceptdecline"
            android:text="@string/decline"
            android:textAllCaps="false"
            android:textColor="@color/vl_white" />
    </LinearLayout>
</LinearLayout>
