<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGray"
        android:id="@+id/tvTitle"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Your Bookings"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@color/lightestgrey"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nobookings"
        android:id="@+id/tvYourBookings"
        android:textColor="@color/lightGray"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="110dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whenYouBook"
        android:id="@+id/tvWhenYouBook"
        android:layout_below="@+id/tvYourBookings"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/lightGray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Exploring"
        android:id="@+id/btnStartExploring"
        android:background="@color/petvacayteal"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:capitalize="none"
        android:layout_below="@+id/tvWhenYouBook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />




        <ListView
            android:id="@+id/lvBookingsHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvTitle">

        </ListView>




</RelativeLayout>
