<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:minHeight="?android:actionBarSize"
        app:theme="@style/RtlOverlay.Widget.AppCompat.ActionButton.Overflow"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:id="@+id/btnBackBlack"
        android:onClick="onPrevious"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_backinblack"
        android:shadowColor="#ffffffff"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Your Space"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_alignBottom="@+id/btnBackBlack"
        android:layout_toEndOf="@+id/btnBackBlack" />
    <TextView
        android:id="@+id/tvToolbarSecondaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:text="Done"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvToolbarTitle" />

    <FrameLayout
        android:id="@+id/flLSY"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="55dp">
    </FrameLayout>

</RelativeLayout>